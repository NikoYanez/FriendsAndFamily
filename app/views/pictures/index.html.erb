<% end %>
<div id="buttons">
  <ul>
    <li><%= link_to 'Show', picture, class:'btn btn-default' %></li>
    <li><%= link_to 'Edit', edit_picture_path(picture), class:'btn btn-default' %></li>
    <li><%= link_to 'Delete', picture, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-default' %></li>
  </ul>
</div>
