<p id="notice"><%= notice %></p>

<h1>Pictures</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Title</th>
      <th>Picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pictures.each do |picture| %>
      <tr>
        <td><%= picture.title %></td>
        <td><%= image_tag picture.url %></td>
        <td><%= link_to 'Show', picture, class:'btn btn-default' %></td>
        <td><%= link_to 'Edit', edit_picture_path(picture), class:'btn btn-default' %></td>
        <td><%= link_to 'Delete', picture, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-default' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add New Picture', new_picture_path %>
